<h2>Todos for: <%= @list.name %></h2>
<ul>
<% @todos.each do |todo| %>
	<li>
		<%= link_to "Toggle", toggle_complete_list_todo_path(@list, todo) %>
		<%= todo.name %> | <%= link_to "Edit", edit_list_todo_path(@list, todo) %>
		| <%= link_to "Delete", list_todo_path(@list, todo), :method => "delete" %>
	</li>
<% end %>
</ul>