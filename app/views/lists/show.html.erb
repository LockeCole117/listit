<h2><%= @list.name %></h2>
<ul>
<% @list.todos.each do |todo| %>
	<li>
		<% if todo.completed? %>
			<strong>Completed</strong>
		<% else %>
			<strong>Incomplete</strong>
		<% end %>
		<%= link_to "Toggle", toggle_complete_list_todo_path(@list, todo), :method => :post %>
		<%= todo.name %>
		| <%= link_to "Edit", edit_list_todo_path(@list, todo) %>
		| <%= link_to "Delete", list_todo_path(@list, todo), :method => "delete" %>
	</li>
<% end %>
</ul>
<div class='actions'>
	<%= link_to 'Create New Todo', new_list_todo_path(@list) %>
</div>